{
	"name": "blc-bot",
	"version": "0.0.1",
	"main": "client.js",
	"repository": "https://github.com/bpas247/OLCBot.git",
	"author": "Brady Pascoe",
	"license": "MIT",
	"private": true,
	"dependencies": {
		"discord.js": "^11.4.2",
		"dotenv": "^8.2.0",
		"pg-promise": "^10.3.1"
	},
	"devDependencies": {
		"@qiwi/semantic-release-gh-pages-plugin": "^1.14.2",
		"@semantic-release/changelog": "^3.0.6",
		"@semantic-release/git": "^7.0.18",
		"@semantic-release/github": "^5.5.5",
		"@types/jest": "^24.0.24",
		"@types/node": "^12.12.20",
		"@types/sinon": "^7.5.1",
		"@typescript-eslint/eslint-plugin": "^2.12.0",
		"@typescript-eslint/parser": "^2.12.0",
		"eslint": "^6.7.2",
		"eslint-config-prettier": "^6.7.0",
		"husky": "^3.1.0",
		"jest": "^24.9.0",
		"prettier": "^1.19.1",
		"pretty-quick": "^2.0.1",
		"sinon": "^7.5.0",
		"ts-jest": "^24.2.0",
		"typescript": "^3.7.3"
	},
	"scripts": {
		"test": "jest --detectOpenHandles",
		"type": "tsc",
		"build": "yarn type && cp -r production/* lib",
		"start": "yarn build && yarn prod",
		"prod": "cd lib && yarn start",
		"lint": "eslint src/**/*.ts && prettier --check src/**/*.ts",
		"format": "prettier --write src/**/*.ts && eslint --fix src/**/*.ts"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"jest": {
		"coverageDirectory": "./coverage/",
		"collectCoverage": true,
		"roots": [
			"<rootDir>/src"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
		"moduleFileExtensions": [
			"ts",
			"js",
			"json",
			"node"
		],
		"modulePathIgnorePatterns": [
			"lib/*"
		]
	},
	"release": {
		"branch": "master",
		"verifyConditions": [
			"@semantic-release/changelog",
			"@semantic-release/git",
			"@qiwi/semantic-release-gh-pages-plugin"
		],
		"publish": [
			"@semantic-release/github",
			{
				"path": "@qiwi/semantic-release-gh-pages-plugin",
				"src": "lib",
				"branch": "build"
			}
		]
	}
}
