{
  "name": "blc-bot",
  "version": "0.0.1",
  "main": "client.js",
  "repository": "https://github.com/bpas247/OLCBot.git",
  "author": "Brady Pascoe",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "discord.js": "^11.4.2",
    "dotenv": "^8.1.0",
    "pg-promise": "^9.1.2"
  },
  "devDependencies": {
		"@qiwi/semantic-release-gh-pages-plugin": "^1.10.5",
		"@semantic-release/changelog": "^3.0.4",
		"@semantic-release/git": "^7.0.16",
		"@semantic-release/github": "^5.4.3",
    "@types/sinon": "^7.0.13",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.3",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "sinon": "^7.4.2",
    "ts-jest": "^24.0.0",
    "typescript": "^3.6.2"
  },
  "scripts": {
    "test": "jest --detectOpenHandles",
    "type": "tsc",
    "build": "yarn type && cp -r production/* lib",
    "start": "yarn build && yarn prod",
    "prod": "cd lib && yarn start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "lib/*"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "release": {
		"branch": "master",
		"verifyConditions": [
			"@semantic-release/changelog",
			"@semantic-release/git",
			"@qiwi/semantic-release-gh-pages-plugin"
		],
		"publish": [
			"@semantic-release/github",
			{
				"path": "@qiwi/semantic-release-gh-pages-plugin",
				"src": "lib",
        "branch": "build"
			}
		]
  }
}
