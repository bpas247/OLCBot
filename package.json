{
  "name": "blc-bot",
  "version": "0.0.1",
  "main": "client.js",
  "repository": "https://github.com/bpas247/OLCBot.git",
  "author": "Brady Pascoe",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "discord.js": "^11.4.2",
    "dotenv": "^7.0.0",
    "pg-promise": "^8.6.5"
  },
  "devDependencies": {
    "@types/sinon": "^7.0.11",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.6",
    "coveralls": "^3.0.3",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "sinon": "^7.3.2",
    "ts-jest": "^24.0.0",
    "typescript": "^3.4.4"
  },
  "scripts": {
    "test": "jest --detectOpenHandles",
    "type": "tsc",
    "build": "yarn type && cp -r production/* lib",
    "start": "yarn build && yarn prod",
    "prod": "cd lib && yarn start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "lib/*"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  }
}
