{
  "name": "blc-bot",
  "version": "0.0.1",
  "main": "client.js",
  "repository": "https://github.com/bpas247/OLCBot.git",
  "author": "Brady Pascoe",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "discord.js": "^11.4.2",
    "dotenv": "^8.0.0",
    "pg-promise": "^8.7.2"
  },
  "devDependencies": {
    "@types/sinon": "^7.0.13",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.12",
    "coveralls": "^3.0.4",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.0.2",
    "prettier": "^1.18.2",
    "sinon": "^7.3.2",
    "ts-jest": "^24.0.0",
    "typescript": "^3.5.2"
  },
  "scripts": {
    "test": "jest --detectOpenHandles",
    "type": "tsc",
    "build": "yarn type && cp -r production/* lib",
    "start": "yarn build && yarn prod",
    "prod": "cd lib && yarn start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "lib/*"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  }
}
