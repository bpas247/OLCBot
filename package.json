{
  "name": "blc-bot",
  "version": "0.0.1",
  "main": "client.js",
  "repository": "https://github.com/bpas247/OLCBot.git",
  "author": "Brady Pascoe",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "discord.js": "^11.4.2",
    "dotenv": "^8.2.0",
    "pg-promise": "^9.3.3"
  },
  "devDependencies": {
    "@qiwi/semantic-release-gh-pages-plugin": "^1.10.7",
    "@semantic-release/changelog": "^3.0.5",
    "@semantic-release/git": "^7.0.17",
    "@semantic-release/github": "^5.5.5",
    "@types/jest": "^24.0.20",
    "@types/node": "^12.12.0",
    "@types/sinon": "^7.5.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0",
    "sinon": "^7.5.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  },
  "scripts": {
    "test": "jest --detectOpenHandles",
    "type": "tsc",
    "build": "yarn type && cp -r production/* lib",
    "start": "yarn build && yarn prod",
    "prod": "cd lib && yarn start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "lib/*"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@qiwi/semantic-release-gh-pages-plugin"
    ],
    "publish": [
      "@semantic-release/github",
      {
        "path": "@qiwi/semantic-release-gh-pages-plugin",
        "src": "lib",
        "branch": "build"
      }
    ]
  }
}
